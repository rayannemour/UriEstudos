import java.io.IOException;
import java.util.Scanner;
public class Main {
 
    public static void main(String[] args) throws IOException {
 
        Scanner teclado = new Scanner(System.in);
         double pi=3.14159;
         double raio;
         double area;
         
         raio = teclado.nextDouble();
         
        area=pi*(raio*raio);
         
         System.out.format("A=%.4f\n",area);
 
    }
 
}
