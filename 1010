import java.util.Scanner;
import java.util.Locale;
public class Main {

    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Scanner entrada = new Scanner(System.in);
        
        int cod1, n1;
        double v1;
        
        int cod2, n2;
        double v2;
        
        cod1 = entrada.nextInt();
        n1 = entrada.nextInt();
        v1 = entrada.nextDouble();
        cod2 = entrada.nextInt();
        n2 = entrada.nextInt();
        v2 = entrada.nextDouble();
        double tot = ((n1*v1)+(n2*v2));
        System.out.printf("VALOR A PAGAR: R$ %.2f\n",tot);
    }
    
}
